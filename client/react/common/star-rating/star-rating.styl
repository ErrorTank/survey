
.stars-outer {
  display: inline-block;
  position: relative;
  font-family: "Font Awesome 5 Pro";
  font-size 30px
  cursor pointer
  font-weight 900
  .star{
    margin 0 5px
  }

  &.editable{
    cursor pointer
  }
  & > span::before {
    content: "\f005";
    color #b8b8b8
  }
  .stars-inner {
    position: absolute;
    top: 0;
    left: 0;
    white-space: nowrap;
    pointer-events none
    overflow: hidden;
    width: 0;
    .star{
      margin 0 5px
    }
    & > span::before {
      content: "\f005";
      color: #f8ce0b;

    }
  }

}