.survey-step-3{
  max-width 100%
  .survey-text{
    background-color #f5f5e9
    border-radius 20px
    padding 6px
    margin-top 40px
    box-shadow:0px 1px 3px #696969
    .st-container{
      border-radius 20px

      border 1px dashed spaColor

      .st-input{
        textarea{
          width 100%
          background transparent
          border none
          outline none
          height 12rem
          padding 8px 12px
          font-size 1.2rem
        }
      }
      .st-label{
        font-size 1.2rem
        color #5c5c5c
        font-family: 'PT Sans', sans-serif;
        text-align center
        font-weight bold
      }
    }
  }
  .survey-rating{
    text-align center

    .rating{
      display inline-block
      width 10rem
      padding 0 1rem

      &.active{
        .rating-icon{
          i{
            transform translate(-50%, -50%) scale(1.5)
            opacity 1
          }
        }
      }

      @media (max-width: 600px){
        margin 0 !important
        .rating-label{
          margin-top 0 !important

          font-size 1.1rem !important



        }
        .rating-icon{
          height 60px !important

          i{

            font-size 3rem !important


          }
        }
      }

      .rating-icon{
        height 80px
        position relative

        i{
          transition all 0.2s ease
          position absolute
          top 50%
          left 50%
          font-size 4rem
          opacity 0.7
          color #fff582
          transform translate(-50%, -50%)
        }
      }
      .rating-label{
        margin-top 20px
        max-width 18rem
        background-color #f7f7f7
        font-size 1.2rem
        color #5c5c5c
        white-space nowrap
        font-family: 'PT Sans', sans-serif;
        border-radius 30px
        text-align center

      }
    }
  }
}