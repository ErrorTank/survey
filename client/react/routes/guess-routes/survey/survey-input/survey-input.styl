.survey-input{

  margin auto
  margin-bottom 20px
  position relative
  height 3rem
  &.disabled{
    input{
      pointer-events none
    }
  }
  input{
    width 100%
    border none
    outline none
    border-radius 25px
    padding 10px 12px
    height 100%
    font-size 1.3rem
    padding-left 11rem
    box-shadow:2px 1px 4px #2E2E2E
  }
  .si-label{
    position absolute
    left 0
    top 0
    border-radius 25px
    line-height: 3rem;
    padding 0 12px
    text-align center
    width 10rem
    font-size 1.3rem
    color white
    font-weight 500
    height 100%
    background-color spaColor
  }
}