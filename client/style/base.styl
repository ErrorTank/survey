*,
*::after,
*::before {
  margin: 0;
  padding: 0;
  box-sizing: inherit;
}
button{
  font-size 17px !important
  font-weight 500 !important
  position relative
}
.white-box{
  border-radius 5px
  background-color white
  box-shadow:0px 1px 2px #C4C4C4
  .box-header{
    font-weight 500
    font-size 1.6rem
    padding 12px 16px
    border-bottom 1px solid #d2d2d2
  }
  .box-body{
    padding 12px 16px
  }
  .box-footer{
    font-weight 500
    font-size 1.5rem
    padding 12px 16px
  }
}
@keyframes spinner{
  from{
    transform rotateZ(0)
  }
  to{
    transform rotateZ(360deg)
  }
}
body {
  font-family: "Roboto", sans-serif;
  box-sizing: border-box;
  overflow-x hidden
  margin 0
  padding 0
  font-weight: 300;
  line-height: 1.6;
  color: #1a1a1a

  background-color: #f2f2f2 !important;
  position: relative;
}
.success-modal{
  .success-text{
    display flex
    align-items center
    .success-icon{
      font-size 2.2rem
      color #0ac282
    }
    span{
      padding-left 10px
    }
  }

}
#app{
  min-height: 100vh;
  padding-left 16px
  padding-right 16px
}